<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">tigrenblog_new_form.tigrenblog_listing_data_source</item>
            <item name="deps" xsi:type="string">tigrenblog_new_form.tigrenblog_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Add / Edit Post</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">tigrenblog_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="string">Tigren\Blog\Block\Adminhtml\Edit\Button\Save</item>
            <item name="delete" xsi:type="string">Tigren\Blog\Block\Adminhtml\Edit\Button\Delete</item>
        </item>
    </argument>
    <dataSource name="tigrenblog_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Tigren\Blog\Model\Blog\DataProvider</argument>
            <argument name="name" xsi:type="string">tigrenblog_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">post_id</argument>
            <argument name="requestFieldName" xsi:type="string">post_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="tigrenblog/post/savepost"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="tigrenblog_new_form">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Add / Edit Post</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="post_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Post ID</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">post_id</item>
                </item>
            </argument>
            <settings>
                <visible>false</visible>
            </settings>
        </field>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">title</item>
                </item>
            </argument>
        </field>
        <field name="post_image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Image</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">post_image</item>
                </item>
            </argument>
        </field>
        <field name="short_content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Short Content</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">short_content</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="config" xsi:type="array">
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="full_content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Full Content</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">full_content</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="config" xsi:type="array">
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="category_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Category</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">category_id</item>
                    <item name="options" xsi:type="object">Tigren\Blog\Model\CategoryDataProvider</item>
                    <item name="dataScope" xsi:type="string">category_id</item>
                </item>
            </argument>
        </field>
        <field name="published_at">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">date</item>
                    <item name="label" xsi:type="string" translate="true">Published At</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">published_at</item>
                </item>
            </argument>
        </field>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">tigrenblog_form</item>
                    <item name="dataScope" xsi:type="string">status</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
